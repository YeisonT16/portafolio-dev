                  {tag.name === "React.js" && <ReactIcon class="size-4" />}
                  {tag.name === "JavaScript" && (
                    <JavaScriptIcon class="size-4" />
                  )}
                  {tag.name === "Next.js" && <NextIcon class="size-4" />}
                  {tag.name === "Astro" && <AstroIcon class="size-4" />}
                  {tag.name}
                </span>
              </li>
            ))}
          </ul>
        </div>
      </div>
    </article>
  ))
}
