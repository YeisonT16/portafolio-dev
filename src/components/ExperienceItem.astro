---
interface Props {
  title: string;
  description: string;
  link?: string;
  date: string;
}

const { title, description, link, date } = Astro.props;
---

<div
  class="absolute w-3 h-3 bg-purple-600 rounded-full mt-1.5 -start-1.5 dark:border-gray-900 dark:bg-gray-700 border border-solid shadow-[0px_0px_5px_blue,0px_0px_5px_blue_inset]"
>
</div>
<div class="flex content-center justify-center w-full">
  <div class="block w-1/3">
    <time class="mb-1 text-lg font-normal leading-none text-cyan-300/80"
      >{date}</time
    >
    <h3 class="text-xl font-semibold text-indigo-300/90 mt-2 dark:text-white">
      {title}
    </h3>
  </div>
  <div
    class="block border-2 border-solid border-slate-700 rounded-xl p-5 w-[65%] opacity-75 bg-black/70 hover:border-cyan-300/80 hover:opacity-95 transition transform duration-700 shadow-inner hover:shadow-cyan-300/80"
  >
    <p class="mb-4 text-base font-normal text-white text-pretty">
      {description}
    </p>
  </div>
</div>

{
  link && (
    <a
      href={link}
      class="inline-flex items-center px-4 py-2 text-sm font-medium text-gray-900 bg-white border border-gray-200 rounded-lg hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-4 focus:outline-none focus:ring-gray-100 focus:text-blue-700 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700 dark:focus:ring-gray-700"
    >
      Saber m√°s...{" "}
      <svg
        class="w-3 h-3 ms-2 tl:rotate-180"
        aria-hidden="true"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 14 10"
      >
        <path
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M1 5h12m0 0L9 1m4 4L9 9"
        />
      </svg>
    </a>
  )
}
